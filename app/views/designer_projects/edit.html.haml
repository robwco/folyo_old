= content_for :title, "Add a new portfolio project"

.block
  %p.note Ego vero sic intellego, Patres conscripti, nos hoc tempore in provinciis decernendis perpetuae pacis habere oportere rationem. Nam quis hoc non sentit omnia alia esse nobis vacua ab omni periculo atque etiam suspicione belli?

= simple_form_for [@designer, @designer_project], url: designer_project_path(@designer, @designer_project) do |f|
  = f.input :name

%label= 'Artwork (up to 2MB)'
- if @designer_project.artwork
  = image_tag @designer_project.artwork.url(:small)
= s3_uploader_form id: 's3-uploader', callback_url: designer_project_path(@designer, @designer_project, format: :js), callback_method: 'PUT', callback_param: "designer_project[direct_upload_url]", max_file_size: 2.megabytes do
  = file_field_tag :file, multiple: false

%script#template-upload{type: "text/x-tmpl"}
  .upload{id: "file-{%=o.unique_id%}"}
    = "{%=o.name%}"
    .progress
      .bar{style: "width: 0%"}

%input.button.big-button#delegate-submit-btn{type: 'submit', value: 'Save project'}

:coffeescript
  head ->
    $ ->
      $('#delegate-submit-btn').on 'click', -> $('form.edit_designer_project').submit()




