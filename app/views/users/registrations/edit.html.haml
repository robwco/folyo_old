= content_for :title, "My Account"

= content_for :subnav do
  - if current_user.is_a? Designer
    = render :partial => '/designers/account_nav'
  - if current_user.is_a? Client
    = render :partial => '/clients/account_nav'

#flash
  = devise_error_messages!

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  .section
    %h3 About You
    = f.input :full_name
    = f.input :email
  .section
    %h3 Change Password
    = f.input :password, :as => :password, :required => false, :label => "Password"

  = f.submit "Update Profile", :class => "button big-button"