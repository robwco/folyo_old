= content_for :mainaction do
  .action-bar
    %a.button.secondary.click-delegate{href: '#', 'data-click-target' => "form input.button[name='workflow_save']"} Save
    - if offer.can_submit?
      %a.button.click-delegate{href: '#', 'data-click-target' => "form input.button[name='workflow_submit']"} Submit for Review