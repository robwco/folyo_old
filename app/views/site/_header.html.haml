%head
	- if ENV['RAILS_ENV'] == "production"
		/ = render :partial => "/site/kissmetrics"
	%title
		Folyo - 
		= yield(:title)
	
	%meta{:name => "description", :content => "Folyo helps startups find great designers by connecting them with a curated list of talented freelancers."}
	%meta{:name => "keywords", :content => "san francisco, startup, bay area, UI, GUI, design, designer, hire, find"}
	
	= stylesheet_link_tag 'screen', :media => 'screen, projection'
	= stylesheet_link_tag 'jquery.wysiwyg', :media => 'screen'
		
	/[if lt IE 8]
	/	= stylesheet_link_tag 'ie.css', :media => 'screen, projection'

	= javascript_include_tag :vendor, :application
	
	= csrf_meta_tag
	
	- if protect_against_forgery?
		:javascript
			var AUTH_TOKEN = #{form_authenticity_token.inspect};

	%link{:rel=>"shortcut icon", :href=>"/favicon.ico"}

	%script{:type=>"text/javascript", :src=>"http://use.typekit.com/tpm6qxy.js"}
	:javascript
		try{Typekit.load();}catch(e){}

	:javascript
		var _gaq = _gaq || [];
		_gaq.push(['_setAccount', 'UA-32751793-1']);
		_gaq.push(['_setDomainName', 'folyo.me']);
		_gaq.push(['_trackPageview']);

		(function() {
		var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		})();

	= render :partial => '/site/mixpanel'	
	=# render :partial => '/site/klaviyo'