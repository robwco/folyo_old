= content_for :title, 'Referrals'

.referrals
  .input.referral.url

    %h3 Your referral url

    %input#referral-url{type: 'url', value: @referral_url, onClick: "this.select();"}

    = link_to '#', class: 'button clipboard-copy', "data-clipboard-target" => 'referral-url' do
      = fa_icon 'clipboard'
      Copy

    = link_to "https://twitter.com/share?text=Finding a Designer, Made Easy&url=#{CGI.escape(@referral_url)}", class: 'button twitter-share', target: '_blank' do
      = fa_icon 'twitter'
      Share

  .balance
    %h3 Balance
    %p $60 available
    = link_to '#', class: 'button withdraw' do
      Withdraw

  .history
    %h3 History

    - if @referrals.empty?
      No referrals yet
    - else
      %table
        %thead
          %th Client name
          %th Job offer
          %th Money earned
        %tbody
          - @referrals.each do |referral|
            %tr{ class: referral[:status] }
              %td= referral[:offer].client.full_name
              %td= referral[:offer].title.truncate(30)
              %td= referral[:label]



