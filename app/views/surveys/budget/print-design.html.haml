= simple_form_for @survey, url: survey_path(@survey), as: :survey, wrapper: :survey do |f|

  %a.survey-intro-link{href: '/surveys/budget/introduction'} The 2014 Folyo Budget Survey

  = render '/surveys/partials/pagination', {current_page: :print_design, position: 'top'}

  .survey-intro
    :markdown
      Who says print is dead?

  = render '/surveys/partials/skill_projects', skill: BudgetSurveyData.skills[:print_design], f: f

  = render '/surveys/partials/pagination', {current_page: :print_design, position: 'bottom'}
