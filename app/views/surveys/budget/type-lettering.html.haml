= simple_form_for @survey, url: survey_path(@survey), as: :survey, wrapper: :survey do |f|

  %a.survey-intro-link{href: '/surveys/budget/introduction'} The 2014 Folyo Budget Survey

  = render '/surveys/partials/pagination', {current_page: 7, position: 'top'}

  - skill = BudgetSurveyData.skills[:type_lettering]

  .survey-intro
    :markdown
      Now this is my type of project!

  = render layout: '/surveys/partials/form_block' do
    = render '/surveys/partials/project', project: skill[:project_types][:typeface_design]
    = render '/surveys/partials/budget', input_name: :typeface_design_budget, input_label: 'How much would you charge for a similar project?', f: f

  = render layout: '/surveys/partials/form_block' do
    = render '/surveys/partials/project', project: skill[:project_types][:simple_lettering]
    = render '/surveys/partials/budget', input_name: :simple_lettering_budget, input_label: 'How much would you charge for a similar project?', f: f

  = render layout: '/surveys/partials/form_block' do
    = render '/surveys/partials/project', project: skill[:project_types][:complex_lettering]
    = render '/surveys/partials/budget', input_name: :complex_lettering_budget, input_label: 'How much would you charge for a similar project?', f: f

  = render '/surveys/partials/pagination', {current_page: 7, position: 'bottom'}
