.designer-reply
  %p.reply-intro
    = designer_reply.designer.full_name
    replied to your project
    = link_to designer_reply.job_offer.title, offer_path(designer_reply.job_offer)
  %p.reply-message
    = auto_link(designer_reply.message)

- if with_flash
  = render '/site/flash', flash: flash

- if designer_reply.conversation
  = render '/conversations/show', designer_reply: designer_reply, conversation: designer_reply.conversation
- else
  = render '/conversations/new', designer_reply: designer_reply

= render '/designers/profile/designer_profile', designer: designer_reply.designer
