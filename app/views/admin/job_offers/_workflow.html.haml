.section.workflow
  - if @job_offer.can_accept?
    %p
      = link_to 'Accept the offer', accept_admin_offer_path(@job_offer), method: :patch, class: 'button big-button inline-block'
    %hr

  - if @job_offer.can_reject?
    = simple_form_for @job_offer, url: reject_admin_offer_path(@job_offer), method: :patch do |f|
      = f.input :review_comment, as: :text, input_html: {class: 'markdown'}, label: 'Why is the offer rejected?'
      = f.submit 'Reject the offer', class: 'button big-button'