= content_for :title, "Job Offers"
= content_for :subnav do
  = render '/admin/job_offers/job_offers_nav'
= content_for :sidebar do
  = render '/admin/job_offers/job_offers_side_nav'

.refunded
  %h3.refunded Refunded
  %ul.offer-list
    - @job_offers.each do |job|
      = render :partial => '/admin/job_offers/job_offer',  :locals => {:job => job, :display_status => false}
= paginate @job_offers