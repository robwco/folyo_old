= content_for :skip_nav, true
= content_for :skip_footer, true
= content_for :body_class, 'designer-profile moderation'

.note
  = "Applied on #{l(@designer.applied_at, format: :short)}"
  - if @designer.rejected_at
    = "and already rejected on #{l(@designer.rejected_at, format: :short)}"
    - unless @designer.rejection_message.blank?
      = " with following message:"
      .rejection-message= @designer.rejection_message

= render '/designers/profile/featured_work', designer: @designer, with_description: true

= render '/designers/profile/bio', designer: @designer

.sidebar
  %ul.profile-meta
    = render '/designers/profile/skills', designer: @designer

    = render '/designers/profile/location', designer: @designer
