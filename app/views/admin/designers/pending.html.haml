= content_for :title, '[Admin] Browse Designers'
= content_for :body_class, "no-sidebar designer-moderation"
= content_for :skip_footer, true
= content_for :skip_flash, true
= content_for :subnav do
  = render partial: '/admin/designers/designers_nav'

= fa_icon 'arrow-up', class: 'up', style: 'display: none;'

.designers-queue
  .queue-counter
    .counter= @designers.count
    .text designers to go
  %ul.designers
    - @designers.each do |designer|
      %li.designer{class: designer.id == @designer.id ? 'current' : ''}
        = link_to admin_designer_path(designer) do
          %h2{class: designer.status.to_s.downcase}= designer.full_name
          %span.placeholder

.current-designer-pane
  = render 'pending_designer', designer: @designer
