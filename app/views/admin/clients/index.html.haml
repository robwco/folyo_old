= content_for :title, '[Admin]Browse Clients'

.block
	- @clients.each do |client|
		.client
			%h3= link_to client.company_name, edit_client_path(client)
			%h4= client.user.full_name
			%p= client.user.email
			%ul
				- client.job_offers.ordered_by_status.each do |job|
					%li
						%span{:class => "status "+job.status.name.downcase}= job.status.name
						= link_to job.title, designer_offer_path(job)
						- if job.status_id==4
							%span.num-replies= "#{job.designer_replies.count} Replies"
						
	= will_paginate @clients